<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IrinaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.HappyNY.TextView</item>


    </style>

    <style name="Theme.HappyNY.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/NY_green</item>
        <item name="android:fontFamily">cursive</item>

    </style>

    <style name="Theme.HappyNY.Title.TextView" parent="Theme.HappyNY.TextView">
        <item name="android:textSize">50sp</item>

    </style>


    <style name="Theme.NYButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">17sp</item>


    </style>

    
</resources>